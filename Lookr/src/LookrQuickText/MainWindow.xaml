<Window x:Class="LookrQuickText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookr QuickText"
        Width="1380"
        Height="820"
        MinWidth="1120"
        MinHeight="680"
        Background="#003D5B"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="PageBackground" Color="#003D5B" />
        <SolidColorBrush x:Key="ShellBackground" Color="#003D5B" />
        <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF" />
        <SolidColorBrush x:Key="PanelBorder" Color="#33003D5B" />
        <SolidColorBrush x:Key="Accent" Color="#25E2CC" />
        <SolidColorBrush x:Key="PrimaryText" Color="#333333" />
        <SolidColorBrush x:Key="MutedText" Color="#333333" />

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Accent}" />
            <Setter Property="Foreground" Value="{StaticResource ShellBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,7" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>

        <Style x:Key="NeutralButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource PanelBackground}" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
            <Setter Property="BorderBrush" Value="{StaticResource ShellBackground}" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,5" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,3" />
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource ShellBackground}"
                Padding="18,14"
                BorderBrush="{StaticResource Accent}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Lookr QuickText"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="SemiBold" />
                    <TextBlock Text="Offline quicktext library with local AI and Excel import"
                               Foreground="#CCFFFFFF"
                               FontSize="12"
                               Margin="0,2,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="New QuickText"
                            Command="{Binding AddSnippetCommand}" />
                    <Button Content="Import Excel"
                            Click="OnImportExcelClick" />
                    <Button Content="Widget (Ctrl+Shift+Space)"
                            Style="{StaticResource NeutralButton}"
                            Command="{Binding ToggleWidgetCommand}" />
                    <Button Content="Save"
                            Style="{StaticResource NeutralButton}"
                            Command="{Binding SaveLibraryCommand}"
                            Margin="0" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="340" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource PanelBackground}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Categories"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,10" />

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding CategoryFilters}"
                             SelectedItem="{Binding SelectedCategoryFilter}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,5" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Background="{StaticResource PanelBackground}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Library"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryText}"
                               Margin="0,0,0,10" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBox Height="34"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="Search title, body, category, or keywords"
                                   FontSize="11"
                                   Foreground="{StaticResource MutedText}"
                                   Margin="2,4,0,0" />
                    </StackPanel>

                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding FilteredSnippets}"
                             SelectedItem="{Binding SelectedSnippet}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource PanelBorder}" BorderThickness="0,0,0,1" Padding="2,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding Category}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource Accent}"
                                                   Margin="0,2,0,0" />
                                        <TextBlock Text="{Binding Keywords}"
                                                   FontSize="10"
                                                   Foreground="{StaticResource MutedText}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0" />
                                        <TextBlock Text="{Binding Preview}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource PrimaryText}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="4"
                    Background="{StaticResource PanelBackground}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DockPanel>
                        <TextBlock Text="Editor"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryText}"
                                   Margin="0,0,0,10" />

                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Content="Copy"
                                    Command="{Binding CopySnippetCommand}"
                                    Width="84" />
                            <Button Content="Delete"
                                    Style="{StaticResource NeutralButton}"
                                    Command="{Binding DeleteSnippetCommand}"
                                    Width="84"
                                    Margin="0" />
                        </StackPanel>
                    </DockPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Title" Margin="0,0,0,4" />
                            <TextBox Text="{Binding SelectedSnippet.Title, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Category" Margin="0,0,0,4" />
                            <TextBox Text="{Binding SelectedSnippet.Category, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" />
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Keywords" Margin="0,0,0,4" />
                            <TextBox Text="{Binding SelectedSnippet.Keywords, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" />
                        </StackPanel>
                    </Grid>

                    <TextBox Grid.Row="2"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             TextWrapping="Wrap"
                             Text="{Binding SelectedSnippet.Content, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" />

                    <Border Grid.Row="3"
                            Background="#0D003D5B"
                            BorderBrush="{StaticResource PanelBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,10,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Local AI Assistant (Optional, Fully Offline)"
                                       FontWeight="SemiBold"
                                       FontSize="14" />

                            <Grid Grid.Row="1" Margin="0,8,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="96" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding AiExecutablePath, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Grid.Column="1"
                                        Content="AI EXE..."
                                        Style="{StaticResource NeutralButton}"
                                        Margin="8,0,0,0"
                                        Click="OnBrowseAiExecutableClick" />
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="96" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding AiModelPath, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Grid.Column="1"
                                        Content="MODEL..."
                                        Style="{StaticResource NeutralButton}"
                                        Margin="8,0,0,0"
                                        Click="OnBrowseAiModelClick" />
                            </Grid>

                            <Grid Grid.Row="3" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="84" />
                                    <ColumnDefinition Width="84" />
                                    <ColumnDefinition Width="102" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding AiPrompt, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBox Grid.Column="1"
                                         Margin="8,0,0,0"
                                         Text="{Binding AiTemperature, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBox Grid.Column="2"
                                         Margin="8,0,0,0"
                                         Text="{Binding AiMaxTokens, UpdateSourceTrigger=PropertyChanged}" />

                                <Button Grid.Column="3"
                                        Margin="8,0,0,0"
                                        Content="Generate"
                                        Command="{Binding GenerateAiCommand}" />
                            </Grid>

                            <StackPanel Grid.Row="4">
                                <TextBlock Text="{Binding IsAiConfigured, StringFormat='AI configured: {0}'}"
                                           FontSize="11"
                                           Foreground="{StaticResource Accent}" />
                                <TextBlock Text="Temperature / Tokens are in the two small fields above."
                                           FontSize="11"
                                           Foreground="{StaticResource MutedText}" />
                            </StackPanel>

                            <TextBox Grid.Row="5"
                                     Margin="0,6,0,8"
                                     MinHeight="90"
                                     MaxHeight="140"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     Text="{Binding AiOutput}" />
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Apply AI to Selected"
                                Command="{Binding ApplyAiOutputToSnippetCommand}" />
                        <Button Content="Create New from AI"
                                Style="{StaticResource NeutralButton}"
                                Command="{Binding CreateSnippetFromAiCommand}"
                                Margin="0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="#0D003D5B"
                BorderBrush="{StaticResource PanelBorder}"
                BorderThickness="1,1,1,0"
                Padding="12,8">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource PrimaryText}"
                           VerticalAlignment="Center" />
                <TextBlock DockPanel.Dock="Right"
                           Text="Offline desktop app - no browser required"
                           Foreground="{StaticResource MutedText}"
                           FontSize="11"
                           VerticalAlignment="Center" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
